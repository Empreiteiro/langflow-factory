# ========================================
# Langflow Configuration
# ========================================

# URL of your Langflow instance
LANGFLOW_URL=http://localhost:3000

# Langflow authentication token
# LANGFLOW_TOKEN=your-langflow-token-here

# ========================================
# GitHub Configuration
# ========================================

# GitHub repository in the format owner/repo
# GITHUB_REPO=your-username/your-repo

# GitHub access token
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# ========================================
# Backup Configuration
# ========================================

# Output directory (default: ./langflow_backup)
# OUTPUT_DIR=./langflow_backup

# Automatically push to GitHub (true/false)
# PUSH_TO_GITHUB=false

# ========================================
# Project Transfer Configuration
# ========================================

# Source Langflow installation (for project transfer)
# LANGFLOW_SOURCE_URL=http://localhost:3000
# LANGFLOW_SOURCE_TOKEN=your-source-langflow-token-here

# Target Langflow installation (for project transfer)
# LANGFLOW_TARGET_URL=http://localhost:3000
# LANGFLOW_TARGET_TOKEN=your-target-langflow-token-here

# ========================================
# Flow Loop Configuration
# ========================================

# Configuration for run_flow_loop_linux.py script

# Base URL for Langflow API (default: http://localhost:3000)
# LANGFLOW_URL=http://localhost:3000

# API key for authentication (required)
# LANGFLOW_TOKEN=sk-your-api-key-here

# Flow ID to run in loop (required)
# LANGFLOW_FLOW_ID=your-flow-id-here

# Input value for the flow (default: "hello world!")
# LANGFLOW_INPUT_VALUE=hello world!

# Output type: chat, text, or json (default: chat)
# LANGFLOW_OUTPUT_TYPE=chat

# Input type: text or json (default: text)
# LANGFLOW_INPUT_TYPE=text

# Interval in seconds between requests (default: 5)
# LANGFLOW_INTERVAL=5

# Maximum number of requests (0 = unlimited, default: 0)
# LANGFLOW_MAX_REQUESTS=0 